<ul>
  <% @post.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>

<%= simple_form_for @post do |f| %>
  <%= f.input :title %>
  <%= f.input :body %>
  <%= f.input :tweet_it, as: :boolean, label: "Tweet It!" %>
  <%= f.input :category_id, collection: Category.order("title"), default: 1  %>
  <%= f.input :images, as: :file, input_html: {multiple: true}  %>
  <%= f.submit class: "btn btn-success"  %>
<% end %>
